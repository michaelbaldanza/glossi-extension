{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 3,
  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "background": {
    "service_worker": "js/service-worker.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage"
  ]
}